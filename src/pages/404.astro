---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found | DentalReach">
    <section class="min-h-[80vh] flex items-center justify-center bg-tuio-bg relative overflow-hidden">
        <!-- Background decorations -->
        <div class="absolute top-20 left-20 w-64 h-64 bg-tuio-pink/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
        
        <div class="container mx-auto px-4 text-center relative z-10">
            <!-- 404 Number -->
            <div class="mb-8">
                <span class="text-[12rem] md:text-[20rem] font-tuio leading-none text-transparent bg-clip-text bg-gradient-to-br from-tuio-navy via-tuio-pink to-purple-500 opacity-20">
                    404
                </span>
            </div>
            
            <!-- Content overlaid -->
            <div class="-mt-32 md:-mt-48 relative z-10">
                <div class="text-6xl mb-6">ðŸ¦·</div>
                <h1 class="text-4xl md:text-6xl font-tuio uppercase text-tuio-navy mb-6">
                    Oops! Page<br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-tuio-pink to-purple-500">Not Found</span>
                </h1>
                <p class="text-xl text-gray-500 font-light max-w-md mx-auto mb-10">
                    Looks like this tooth got extracted. The page you're looking for doesn't exist or has been moved.
                </p>
                
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/" class="px-8 py-4 bg-tuio-pink text-white rounded-full font-bold uppercase tracking-wide hover:bg-tuio-navy transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
                        Go Home
                    </a>
                    <a href="/search" class="px-8 py-4 bg-white text-tuio-navy rounded-full font-bold uppercase tracking-wide border-2 border-tuio-navy hover:bg-tuio-navy hover:text-white transition-all">
                        Search Site
                    </a>
                </div>
            </div>
            
            <!-- Quick Links -->
            <div class="mt-16 pt-16 border-t border-gray-200">
                <p class="text-gray-400 mb-6 uppercase tracking-widest text-sm font-bold">Popular Pages</p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/articles" class="px-6 py-3 bg-white rounded-full text-tuio-navy hover:bg-tuio-pink hover:text-white transition-all shadow-md">Articles</a>
                    <a href="/events" class="px-6 py-3 bg-white rounded-full text-tuio-navy hover:bg-tuio-pink hover:text-white transition-all shadow-md">Events</a>
                    <a href="/directory" class="px-6 py-3 bg-white rounded-full text-tuio-navy hover:bg-tuio-pink hover:text-white transition-all shadow-md">Directory</a>
                    <a href="/jobs" class="px-6 py-3 bg-white rounded-full text-tuio-navy hover:bg-tuio-pink hover:text-white transition-all shadow-md">Jobs</a>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
