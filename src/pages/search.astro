---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Search | DentalReach">
    <section class="bg-tuio-navy text-white py-16 relative overflow-hidden rounded-b-[40px]">
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
        <div class="container mx-auto px-4 relative z-10">
            <h1 class="text-4xl md:text-6xl font-tuio uppercase text-center mb-8">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-tuio-pink to-purple-500">Search</span>
            </h1>
            <div class="max-w-2xl mx-auto">
                <form class="flex gap-4">
                    <input 
                        type="search" 
                        placeholder="Search articles, events, listings, professionals..."
                        class="flex-grow px-6 py-4 rounded-full bg-white/10 border border-white/20 text-white placeholder:text-gray-400 focus:ring-2 focus:ring-tuio-pink focus:outline-none text-lg"
                    />
                    <button type="submit" class="px-8 py-4 bg-tuio-pink text-white rounded-full font-bold uppercase tracking-wide hover:bg-white hover:text-tuio-pink transition-all shrink-0">
                        Search
                    </button>
                </form>
            </div>
        </div>
    </section>

    <div class="bg-tuio-bg min-h-screen py-12">
        <div class="container mx-auto px-4">
            <!-- Search Categories -->
            <div class="flex flex-wrap gap-3 justify-center mb-12">
                <button class="px-6 py-2 bg-tuio-navy text-white rounded-full font-bold uppercase tracking-wide text-sm">All</button>
                <button class="px-6 py-2 bg-white text-tuio-navy rounded-full font-bold uppercase tracking-wide text-sm hover:bg-tuio-pink hover:text-white transition-all">Articles</button>
                <button class="px-6 py-2 bg-white text-tuio-navy rounded-full font-bold uppercase tracking-wide text-sm hover:bg-tuio-pink hover:text-white transition-all">Events</button>
                <button class="px-6 py-2 bg-white text-tuio-navy rounded-full font-bold uppercase tracking-wide text-sm hover:bg-tuio-pink hover:text-white transition-all">Directory</button>
                <button class="px-6 py-2 bg-white text-tuio-navy rounded-full font-bold uppercase tracking-wide text-sm hover:bg-tuio-pink hover:text-white transition-all">Jobs</button>
                <button class="px-6 py-2 bg-white text-tuio-navy rounded-full font-bold uppercase tracking-wide text-sm hover:bg-tuio-pink hover:text-white transition-all">Products</button>
            </div>

            <!-- Empty State -->
            <div class="bg-white rounded-[32px] p-16 text-center shadow-sm max-w-2xl mx-auto">
                <div class="text-6xl mb-6">üîç</div>
                <h2 class="font-tuio text-2xl uppercase text-tuio-navy mb-4">Start Searching</h2>
                <p class="text-gray-500 mb-8">Enter a keyword above to search across all content on DentalReach.</p>
                <div class="flex flex-wrap gap-3 justify-center">
                    <span class="text-sm text-gray-400">Popular:</span>
                    <a href="/search?q=implants" class="text-tuio-pink hover:underline text-sm">Implants</a>
                    <a href="/search?q=CAD/CAM" class="text-tuio-pink hover:underline text-sm">CAD/CAM</a>
                    <a href="/search?q=orthodontics" class="text-tuio-pink hover:underline text-sm">Orthodontics</a>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
