---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Login | DentalReach">
    <div class="flex min-h-screen bg-white">
        <!-- Left: Image & Branding -->
        <div class="hidden lg:relative lg:block lg:w-1/2 overflow-hidden">
            <div
                class="absolute inset-0 bg-cover bg-center transition-transform duration-700 hover:scale-105"
                style="background-image: url('https://images.pexels.com/photos/3845625/pexels-photo-3845625.jpeg?auto=compress&cs=tinysrgb&w=1200')"
            >
            </div>
            <div
                class="absolute inset-0 bg-gradient-to-tr from-primary-900 via-primary-900/80 to-transparent"
            >
            </div>

            <div class="absolute bottom-0 left-0 p-16 text-white z-10">
                <div
                    class="w-16 h-16 bg-white/10 backdrop-blur-md rounded-2xl flex items-center justify-center mb-8 border border-white/20"
                >
                    <span class="font-heading text-3xl">D</span>
                </div>
                <h2 class="font-heading text-5xl uppercase leading-tight mb-6">
                    Welcome to the<br />Future of<br />Dentistry
                </h2>
                <p
                    class="text-xl text-white/80 font-light max-w-lg leading-relaxed"
                >
                    Join thousands of dental professionals connecting, learning,
                    and growing together on the #1 Dental Platform.
                </p>
            </div>
        </div>

        <!-- Right: Login Form -->
        <div
            class="flex-1 flex flex-col justify-center px-4 sm:px-6 lg:px-20 xl:px-24 bg-white relative"
        >
            <!-- Mobile decorative background -->
            <div
                class="lg:hidden absolute top-0 right-0 w-64 h-64 bg-primary-600/5 rounded-bl-full -z-10"
            >
            </div>

            <div class="w-full max-w-sm mx-auto">
                <div class="mb-10">
                    <h1
                        class="font-heading text-4xl uppercase text-primary-900 mb-2"
                    >
                        Sign In
                    </h1>
                    <p class="text-gray-500">
                        Welcome back! Please enter your details.
                    </p>
                </div>

                <form class="space-y-6" id="login-form">
                    <!-- Email Input -->
                    <div>
                        <label
                            class="block text-sm font-bold text-gray-700 uppercase tracking-wide mb-2"
                            >Email</label
                        >
                        <div class="relative group">
                            <div
                                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400 group-focus-within:text-primary-600 transition-colors"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                                    ></path>
                                    <path
                                        d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                                    ></path>
                                </svg>
                            </div>
                            <input
                                type="email"
                                name="email"
                                required
                                class="block w-full pl-12 pr-4 py-4 border-2 border-gray-100 rounded-2xl bg-gray-50 text-gray-900 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-primary-600 focus:ring-4 focus:ring-primary-600/10 transition-all duration-200"
                                placeholder="dentist@example.com"
                            />
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div id="password-field" class="hidden space-y-2">
                        <label
                            class="block text-sm font-bold text-gray-700 uppercase tracking-wide"
                            >Password</label
                        >
                        <div class="relative group">
                            <div
                                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400 group-focus-within:text-primary-600 transition-colors"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <input
                                type="password"
                                name="password"
                                id="password-input"
                                class="block w-full pl-12 pr-12 py-4 border-2 border-gray-100 rounded-2xl bg-gray-50 text-gray-900 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-primary-600 focus:ring-4 focus:ring-primary-600/10 transition-all duration-200"
                                placeholder="••••••••"
                            />
                            <button
                                type="button"
                                id="toggle-password-visibility"
                                class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition-colors"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    ></path>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="flex items-center gap-3 pt-2">
                        <button
                            type="submit"
                            id="submit-btn"
                            class="flex-1 py-4 px-6 bg-primary-600 hover:bg-primary-900 text-white rounded-2xl font-bold uppercase tracking-wider transition-all shadow-lg shadow-primary-600/30 hover:shadow-primary-900/30 hover:-translate-y-1 flex justify-center items-center gap-2"
                        >
                            <span>Send Magic Link</span>
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg
                            >
                        </button>

                        <button
                            type="button"
                            id="toggle-auth"
                            class="p-4 bg-gray-50 text-gray-400 rounded-2xl hover:bg-gray-100 hover:text-primary-900 border-2 border-gray-100 transition-all tooltip-trigger"
                            title="Toggle Password Login"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
                                ></path></svg
                            >
                        </button>
                    </div>

                    <!-- Social Login -->
                    <div class="relative mt-8">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-100"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span
                                class="px-4 bg-white text-gray-400 uppercase tracking-widest text-xs font-semibold"
                                >Or continue with</span
                            >
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mt-6">
                        <button
                            type="button"
                            class="flex items-center justify-center px-4 py-3 border border-gray-200 rounded-xl hover:bg-gray-50 hover:border-gray-300 transition-all bg-white text-sm font-medium text-gray-600 gap-2"
                        >
                            <svg class="h-5 w-5" viewBox="0 0 24 24"
                                ><path
                                    fill="#4285F4"
                                    d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                                ></path><path
                                    fill="#34A853"
                                    d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                                ></path><path
                                    fill="#FBBC05"
                                    d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                                ></path><path
                                    fill="#EA4335"
                                    d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                                ></path></svg
                            >
                            Google
                        </button>
                        <button
                            type="button"
                            class="flex items-center justify-center px-4 py-3 border border-gray-200 rounded-xl hover:bg-gray-50 hover:border-gray-300 transition-all bg-white text-sm font-medium text-gray-600 gap-2"
                        >
                            <svg
                                class="h-5 w-5 fill-[#0077b5]"
                                viewBox="0 0 24 24"
                                ><path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path></svg
                            >
                            LinkedIn
                        </button>
                    </div>

                    <!-- Message -->
                    <div
                        id="message"
                        class="hidden p-4 rounded-xl text-center font-medium text-sm animate-fade-in"
                    >
                    </div>
                </form>

                <div class="mt-8 text-center">
                    <p class="text-sm text-gray-500">
                        Don't have an account?
                        <a
                            href="/register"
                            class="font-bold text-primary-600 hover:text-primary-900 transition-colors"
                            >Sign up for free</a
                        >
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        import { createSupabaseBrowserClient } from "../lib/supabase";

        const supabase = createSupabaseBrowserClient();
        const form = document.getElementById("login-form");
        const message = document.getElementById("message");
        const toggleBtn = document.getElementById("toggle-auth");
        const passwordField = document.getElementById("password-field");
        const submitBtn = document.getElementById("submit-btn");
        const togglePwdVisibility = document.getElementById(
            "toggle-password-visibility",
        );
        const passwordInput = document.getElementById(
            "password-input",
        ) as HTMLInputElement;

        let isPasswordMode = false;

        // Toggle logic
        toggleBtn?.addEventListener("click", () => {
            isPasswordMode = !isPasswordMode;

            if (passwordField) {
                if (isPasswordMode) {
                    passwordField.classList.remove("hidden");
                    // Small animation effect
                    passwordField.animate(
                        [
                            { opacity: 0, transform: "translateY(-10px)" },
                            { opacity: 1, transform: "translateY(0)" },
                        ],
                        { duration: 300, fill: "forwards", easing: "ease-out" },
                    );
                } else {
                    passwordField.classList.add("hidden");
                }
            }

            if (submitBtn) {
                const span = submitBtn.querySelector("span");
                if (span)
                    span.textContent = isPasswordMode
                        ? "Sign In"
                        : "Send Magic Link";
            }
        });

        // Toggle Password Visibility
        togglePwdVisibility?.addEventListener("click", () => {
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                togglePwdVisibility.classList.add("text-primary-600");
            } else {
                passwordInput.type = "password";
                togglePwdVisibility.classList.remove("text-primary-600");
            }
        });

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target as HTMLFormElement);
            const email = formData.get("email") as string;
            const password = formData.get("password") as string;

            // Clear message
            if (message) {
                message.classList.add("hidden");
                message.className =
                    "hidden p-4 rounded-xl text-center font-medium text-sm animate-fade-in"; // reset classes
            }

            // Button loading state
            if (submitBtn) {
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<span class="animate-spin">↻</span>';
                submitBtn.setAttribute("disabled", "true");
                submitBtn.classList.add("opacity-70", "cursor-not-allowed");

                // --- Perform Auth ---
                let result;
                try {
                    if (isPasswordMode && password) {
                        console.log("Attempting password login for:", email);
                        result = await supabase.auth.signInWithPassword({
                            email,
                            password,
                        });

                        if (!result.error) {
                            console.log("Login success, redirecting...");
                            window.location.href = "/dashboard";
                            return;
                        }
                    } else {
                        // Magic Link
                        result = await supabase.auth.signInWithOtp({
                            email,
                            options: {
                                emailRedirectTo: `${window.location.origin}/dashboard`,
                            },
                        });
                    }

                    const { error } = result;

                    if (error) {
                        if (message) {
                            message.textContent = error.message;
                            message.classList.add(
                                "bg-red-50",
                                "text-red-600",
                                "border",
                                "border-red-100",
                            );
                            message.classList.remove("hidden");
                        }
                    } else if (!isPasswordMode) {
                        if (message) {
                            message.textContent =
                                "✓ Check your email for the magic link!";
                            message.classList.add(
                                "bg-green-50",
                                "text-green-600",
                                "border",
                                "border-green-100",
                            );
                            message.classList.remove("hidden");
                        }
                    }
                } catch (err) {
                    console.error(err);
                } finally {
                    // Reset button
                    submitBtn.innerHTML = originalText;
                    submitBtn.removeAttribute("disabled");
                    submitBtn.classList.remove(
                        "opacity-70",
                        "cursor-not-allowed",
                    );
                }
            }
        });
    </script>
</BaseLayout>
