---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { createSupabaseServerClient } from '../../lib/supabase';

export const prerender = false;

const supabase = createSupabaseServerClient(Astro);
const { data: { user } } = await supabase.auth.getUser();

if (!user) {
  return Astro.redirect('/login');
}

// Fetch user's award nominations
const { data: nominations } = await supabase
  .from('award_nominations')
  .select('*, award:awards(name, year)')
  .eq('nominee_id', user.id)
  .order('created_at', { ascending: false });

const statusColors: Record<string, string> = {
  nominated: 'bg-blue-100 text-blue-700',
  shortlisted: 'bg-purple-100 text-purple-700',
  winner: 'bg-yellow-100 text-yellow-700',
  finalist: 'bg-green-100 text-green-700',
};
---

<DashboardLayout title="My Awards">
    <div class="mb-8">
        <h2 class="text-2xl font-bold dark:text-white">My Awards & Nominations</h2>
        <p class="text-gray-500">Track your recognition in the DentalReach Awards program.</p>
    </div>

    {nominations && nominations.length > 0 ? (
        <div class="space-y-6">
            {nominations.map((nom: any) => (
                <div class="bg-white dark:bg-neutral-800 rounded-[24px] p-6 shadow-sm flex flex-col md:flex-row items-center gap-6">
                    <div class="w-20 h-20 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-[16px] flex items-center justify-center shrink-0">
                        <span class="text-4xl">üèÜ</span>
                    </div>
                    <div class="flex-grow text-center md:text-left">
                        <h3 class="text-xl font-bold text-tuio-navy dark:text-white mb-1">
                            {nom.award?.name || 'DentalReach Award'}
                        </h3>
                        <p class="text-gray-500">{nom.award?.year || '2026'}</p>
                    </div>
                    <span class={`text-sm font-bold uppercase px-4 py-2 rounded-full ${statusColors[nom.status] || 'bg-gray-100 text-gray-700'}`}>
                        {nom.status}
                    </span>
                </div>
            ))}
        </div>
    ) : (
        <div class="bg-white dark:bg-neutral-800 rounded-[24px] p-16 text-center shadow-sm">
            <div class="text-6xl mb-6">üéñÔ∏è</div>
            <h3 class="text-2xl font-bold text-tuio-navy dark:text-white mb-2">No nominations yet</h3>
            <p class="text-gray-500 mb-6">Participate in the DentalReach Awards to get recognized for your contributions.</p>
            <a href="/awards" class="inline-block px-8 py-3 bg-tuio-pink text-white rounded-full font-bold hover:bg-tuio-navy transition-all">
                Explore Awards
            </a>
        </div>
    )}
</DashboardLayout>
