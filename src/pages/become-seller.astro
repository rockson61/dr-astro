---
import BaseLayout from '../layouts/BaseLayout.astro';

const benefits = [
  { icon: 'üè™', title: 'Your Own Storefront', desc: 'Showcase and sell your products to thousands of dental professionals.' },
  { icon: 'üìä', title: 'Sales Dashboard', desc: 'Track orders, revenue, and customer analytics in real-time.' },
  { icon: 'üí≥', title: 'Secure Payments', desc: 'Fast, secure payments with integrated Stripe processing.' },
  { icon: 'üåç', title: 'Global Reach', desc: 'Access buyers from 100+ countries in our dental community.' },
];

const steps = [
  { num: '01', title: 'Apply', desc: 'Submit your seller application with business details.' },
  { num: '02', title: 'Verify', desc: 'Our team reviews and verifies your credentials.' },
  { num: '03', title: 'List', desc: 'Add your products with photos and descriptions.' },
  { num: '04', title: 'Sell', desc: 'Start receiving orders and grow your business.' },
];
---

<BaseLayout title="Become a Seller | DentalReach Marketplace">
    <section class="bg-gradient-to-br from-tuio-navy to-red-900 text-white py-24 relative overflow-hidden rounded-b-[40px]">
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-5xl md:text-7xl font-tuio uppercase mb-6 leading-[0.9]">
                    Sell on<br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-tuio-red to-yellow-400">DentalReach</span>
                </h1>
                <p class="text-xl text-gray-300 font-light mb-10">
                    Join our marketplace and reach thousands of dental professionals looking for quality products and equipment.
                </p>
                <a href="#apply" class="inline-block px-10 py-4 bg-tuio-red text-white rounded-full font-bold uppercase tracking-wide hover:bg-white hover:text-tuio-red transition-all shadow-xl">
                    Start Selling Today
                </a>
            </div>
        </div>
    </section>

    <div class="bg-tuio-bg py-20">
        <div class="container mx-auto px-4">
            <!-- Benefits -->
            <div class="text-center mb-16">
                <h2 class="text-4xl font-tuio uppercase text-tuio-navy mb-4">Why Sell With Us?</h2>
                <div class="w-24 h-1 bg-tuio-red mx-auto"></div>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-20">
                {benefits.map(benefit => (
                    <div class="bg-white rounded-[32px] p-8 text-center shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all group">
                        <div class="text-5xl mb-6 group-hover:scale-110 transition-transform">{benefit.icon}</div>
                        <h3 class="font-tuio text-xl uppercase text-tuio-navy mb-4">{benefit.title}</h3>
                        <p class="text-gray-500 font-light">{benefit.desc}</p>
                    </div>
                ))}
            </div>

            <!-- How It Works -->
            <div class="text-center mb-16">
                <h2 class="text-4xl font-tuio uppercase text-tuio-navy mb-4">How It Works</h2>
                <div class="w-24 h-1 bg-tuio-red mx-auto"></div>
            </div>
            <div class="grid md:grid-cols-4 gap-8 mb-20">
                {steps.map((step, i) => (
                    <div class="relative">
                        <div class="bg-white rounded-[32px] p-8 text-center shadow-sm">
                            <div class="text-5xl font-tuio text-tuio-red/20 mb-4">{step.num}</div>
                            <h3 class="font-tuio text-xl uppercase text-tuio-navy mb-4">{step.title}</h3>
                            <p class="text-gray-500 font-light">{step.desc}</p>
                        </div>
                        {i < 3 && (
                            <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2 text-tuio-red text-2xl z-10">‚Üí</div>
                        )}
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Application Form -->
    <section id="apply" class="bg-tuio-navy text-white py-20 rounded-t-[40px]">
        <div class="container mx-auto px-4">
            <div class="max-w-2xl mx-auto">
                <div class="text-center mb-12">
                    <h2 class="text-4xl font-tuio uppercase mb-4">Seller Application</h2>
                    <p class="text-gray-400 font-light">Get started in minutes. We'll review your application within 48 hours.</p>
                </div>
                <form class="space-y-6">
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-bold uppercase tracking-wide mb-2 text-gray-300">Business Name</label>
                            <input type="text" class="w-full px-4 py-3 rounded-[16px] bg-white/10 border border-white/20 text-white placeholder:text-gray-500 focus:ring-2 focus:ring-tuio-red focus:outline-none" placeholder="Your Company" />
                        </div>
                        <div>
                            <label class="block text-sm font-bold uppercase tracking-wide mb-2 text-gray-300">Contact Email</label>
                            <input type="email" class="w-full px-4 py-3 rounded-[16px] bg-white/10 border border-white/20 text-white placeholder:text-gray-500 focus:ring-2 focus:ring-tuio-red focus:outline-none" placeholder="sales@company.com" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-bold uppercase tracking-wide mb-2 text-gray-300">Product Categories</label>
                        <select class="w-full px-4 py-3 rounded-[16px] bg-white/10 border border-white/20 text-white focus:ring-2 focus:ring-tuio-red focus:outline-none">
                            <option value="" class="text-gray-900">Select your main category</option>
                            <option value="equipment" class="text-gray-900">Equipment</option>
                            <option value="instruments" class="text-gray-900">Instruments</option>
                            <option value="materials" class="text-gray-900">Materials</option>
                            <option value="software" class="text-gray-900">Software</option>
                            <option value="other" class="text-gray-900">Other</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-bold uppercase tracking-wide mb-2 text-gray-300">Tell us about your products</label>
                        <textarea rows="4" class="w-full px-4 py-3 rounded-[16px] bg-white/10 border border-white/20 text-white placeholder:text-gray-500 focus:ring-2 focus:ring-tuio-red focus:outline-none resize-none" placeholder="Describe what you sell..."></textarea>
                    </div>
                    <button type="submit" class="w-full py-4 bg-tuio-red text-white rounded-full font-bold uppercase tracking-wide hover:bg-white hover:text-tuio-red transition-all">
                        Submit Application
                    </button>
                </form>
            </div>
        </div>
    </section>
</BaseLayout>
