---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Pricing | DentalReach">
    <!-- Hero -->
    <section class="bg-tuio-navy text-white py-20 relative overflow-hidden rounded-b-[40px]">
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
        <div class="container mx-auto px-4 relative z-10 text-center">
            <span class="inline-block px-4 py-1 bg-tuio-pink/20 text-tuio-pink rounded-full text-sm font-bold uppercase tracking-widest mb-6">Pricing</span>
            <h1 class="text-5xl md:text-7xl font-tuio uppercase mb-6">
                Simple, Transparent<br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-tuio-pink to-purple-500">Pricing</span>
            </h1>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto font-light">
                Choose the plan that fits your needs. No hidden fees, cancel anytime.
            </p>
            
            <!-- Billing Toggle -->
            <div class="flex items-center justify-center gap-4 mt-10">
                <span class="text-gray-400" id="monthly-label">Monthly</span>
                <button id="billing-toggle" class="w-16 h-8 bg-white/20 rounded-full relative transition-all">
                    <div class="absolute left-1 top-1 w-6 h-6 bg-tuio-pink rounded-full transition-all" id="toggle-ball"></div>
                </button>
                <span class="text-white font-bold" id="annual-label">
                    Annual <span class="text-tuio-pink">-20%</span>
                </span>
            </div>
        </div>
    </section>

    <!-- Pricing Cards -->
    <section class="bg-tuio-bg py-20 -mt-8">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                
                <!-- Free Plan -->
                <div class="bg-white rounded-[32px] p-8 border-2 border-transparent hover:border-gray-200 transition-all group">
                    <div class="mb-6">
                        <span class="text-tuio-pink font-bold uppercase tracking-widest text-sm">Free</span>
                        <h3 class="font-tuio text-4xl uppercase text-tuio-navy mt-2">Starter</h3>
                    </div>
                    <div class="mb-8">
                        <span class="text-5xl font-tuio text-tuio-navy">$0</span>
                        <span class="text-gray-400">/month</span>
                    </div>
                    <p class="text-gray-500 mb-8 font-light">
                        Perfect for dental professionals getting started.
                    </p>
                    <ul class="space-y-4 mb-10">
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            Access to all articles
                        </li>
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            Job board access
                        </li>
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            Community forums
                        </li>
                        <li class="flex items-center gap-3 text-gray-400">
                            <span class="w-6 h-6 rounded-full bg-gray-100 text-gray-400 flex items-center justify-center text-sm">–</span>
                            Directory listing
                        </li>
                        <li class="flex items-center gap-3 text-gray-400">
                            <span class="w-6 h-6 rounded-full bg-gray-100 text-gray-400 flex items-center justify-center text-sm">–</span>
                            Priority support
                        </li>
                    </ul>
                    <a href="/register" class="block w-full text-center py-4 border-2 border-tuio-navy text-tuio-navy rounded-full font-bold uppercase tracking-wide hover:bg-tuio-navy hover:text-white transition-all">
                        Get Started Free
                    </a>
                </div>
                
                <!-- Pro Plan (Featured) -->
                <div class="bg-tuio-navy rounded-[32px] p-8 border-2 border-tuio-pink relative transform md:-translate-y-4 shadow-2xl">
                    <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-tuio-pink text-white text-sm font-bold uppercase tracking-widest rounded-full">
                        Most Popular
                    </div>
                    <div class="mb-6">
                        <span class="text-tuio-pink font-bold uppercase tracking-widest text-sm">Professional</span>
                        <h3 class="font-tuio text-4xl uppercase text-white mt-2">Pro</h3>
                    </div>
                    <div class="mb-8">
                        <span class="text-5xl font-tuio text-white" id="pro-price">$29</span>
                        <span class="text-gray-400">/month</span>
                    </div>
                    <p class="text-gray-400 mb-8 font-light">
                        For practices ready to grow their presence.
                    </p>
                    <ul class="space-y-4 mb-10">
                        <li class="flex items-center gap-3 text-white">
                            <span class="w-6 h-6 rounded-full bg-tuio-pink/30 text-tuio-pink flex items-center justify-center text-sm">✓</span>
                            Everything in Free
                        </li>
                        <li class="flex items-center gap-3 text-white">
                            <span class="w-6 h-6 rounded-full bg-tuio-pink/30 text-tuio-pink flex items-center justify-center text-sm">✓</span>
                            <strong>Featured</strong> directory listing
                        </li>
                        <li class="flex items-center gap-3 text-white">
                            <span class="w-6 h-6 rounded-full bg-tuio-pink/30 text-tuio-pink flex items-center justify-center text-sm">✓</span>
                            Post 5 jobs/month
                        </li>
                        <li class="flex items-center gap-3 text-white">
                            <span class="w-6 h-6 rounded-full bg-tuio-pink/30 text-tuio-pink flex items-center justify-center text-sm">✓</span>
                            Analytics dashboard
                        </li>
                        <li class="flex items-center gap-3 text-white">
                            <span class="w-6 h-6 rounded-full bg-tuio-pink/30 text-tuio-pink flex items-center justify-center text-sm">✓</span>
                            Priority email support
                        </li>
                    </ul>
                    <a href="/register?plan=pro" class="block w-full text-center py-4 bg-tuio-pink text-white rounded-full font-bold uppercase tracking-wide hover:bg-white hover:text-tuio-navy transition-all shadow-lg">
                        Start 14-Day Trial
                    </a>
                </div>
                
                <!-- Enterprise Plan -->
                <div class="bg-white rounded-[32px] p-8 border-2 border-transparent hover:border-gray-200 transition-all group">
                    <div class="mb-6">
                        <span class="text-tuio-pink font-bold uppercase tracking-widest text-sm">Enterprise</span>
                        <h3 class="font-tuio text-4xl uppercase text-tuio-navy mt-2">Business</h3>
                    </div>
                    <div class="mb-8">
                        <span class="text-5xl font-tuio text-tuio-navy" id="enterprise-price">$99</span>
                        <span class="text-gray-400">/month</span>
                    </div>
                    <p class="text-gray-500 mb-8 font-light">
                        For large practices & DSOs.
                    </p>
                    <ul class="space-y-4 mb-10">
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            Everything in Pro
                        </li>
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            <strong>Unlimited</strong> job postings
                        </li>
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            Multiple team members
                        </li>
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            Custom branding
                        </li>
                        <li class="flex items-center gap-3 text-gray-600">
                            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm">✓</span>
                            Dedicated account manager
                        </li>
                    </ul>
                    <a href="/contact" class="block w-full text-center py-4 border-2 border-tuio-navy text-tuio-navy rounded-full font-bold uppercase tracking-wide hover:bg-tuio-navy hover:text-white transition-all">
                        Contact Sales
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Feature Comparison Table -->
    <section class="bg-white py-20">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-tuio uppercase text-tuio-navy text-center mb-12">Compare Plans</h2>
            <div class="max-w-4xl mx-auto overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b-2 border-gray-100">
                            <th class="text-left py-4 px-4 font-tuio uppercase text-tuio-navy">Feature</th>
                            <th class="text-center py-4 px-4 font-tuio uppercase text-gray-500">Starter</th>
                            <th class="text-center py-4 px-4 font-tuio uppercase text-tuio-pink">Pro</th>
                            <th class="text-center py-4 px-4 font-tuio uppercase text-tuio-navy">Business</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b border-gray-100">
                            <td class="py-4 px-4 text-gray-600">Article access</td>
                            <td class="text-center py-4 px-4 text-green-500 font-bold">✓</td>
                            <td class="text-center py-4 px-4 text-green-500 font-bold">✓</td>
                            <td class="text-center py-4 px-4 text-green-500 font-bold">✓</td>
                        </tr>
                        <tr class="border-b border-gray-100">
                            <td class="py-4 px-4 text-gray-600">Directory listing</td>
                            <td class="text-center py-4 px-4 text-gray-300">–</td>
                            <td class="text-center py-4 px-4 text-green-500 font-bold">Featured</td>
                            <td class="text-center py-4 px-4 text-green-500 font-bold">Premium</td>
                        </tr>
                        <tr class="border-b border-gray-100">
                            <td class="py-4 px-4 text-gray-600">Job postings</td>
                            <td class="text-center py-4 px-4 text-gray-300">–</td>
                            <td class="text-center py-4 px-4 text-tuio-navy font-bold">5/month</td>
                            <td class="text-center py-4 px-4 text-tuio-navy font-bold">Unlimited</td>
                        </tr>
                        <tr class="border-b border-gray-100">
                            <td class="py-4 px-4 text-gray-600">Analytics</td>
                            <td class="text-center py-4 px-4 text-gray-300">–</td>
                            <td class="text-center py-4 px-4 text-green-500 font-bold">✓</td>
                            <td class="text-center py-4 px-4 text-green-500 font-bold">Advanced</td>
                        </tr>
                        <tr class="border-b border-gray-100">
                            <td class="py-4 px-4 text-gray-600">Team members</td>
                            <td class="text-center py-4 px-4 text-tuio-navy font-bold">1</td>
                            <td class="text-center py-4 px-4 text-tuio-navy font-bold">3</td>
                            <td class="text-center py-4 px-4 text-tuio-navy font-bold">Unlimited</td>
                        </tr>
                        <tr>
                            <td class="py-4 px-4 text-gray-600">Support</td>
                            <td class="text-center py-4 px-4 text-gray-500">Community</td>
                            <td class="text-center py-4 px-4 text-tuio-navy font-bold">Priority</td>
                            <td class="text-center py-4 px-4 text-tuio-navy font-bold">Dedicated</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-tuio-bg py-20">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-tuio uppercase text-tuio-navy text-center mb-4">Frequently Asked Questions</h2>
            <p class="text-gray-500 text-center mb-12 max-w-xl mx-auto">Everything you need to know about our pricing.</p>
            
            <div class="max-w-3xl mx-auto space-y-4">
                <div class="faq-item bg-white rounded-[24px] overflow-hidden">
                    <button class="faq-toggle w-full flex items-center justify-between px-8 py-6 text-left font-tuio uppercase text-tuio-navy hover:text-tuio-pink transition-colors">
                        Can I switch plans anytime?
                        <span class="faq-icon text-2xl transition-transform">+</span>
                    </button>
                    <div class="faq-content hidden px-8 pb-6 text-gray-500 font-light">
                        Yes! You can upgrade or downgrade your plan at any time. Changes take effect immediately, and we'll prorate your billing.
                    </div>
                </div>
                <div class="faq-item bg-white rounded-[24px] overflow-hidden">
                    <button class="faq-toggle w-full flex items-center justify-between px-8 py-6 text-left font-tuio uppercase text-tuio-navy hover:text-tuio-pink transition-colors">
                        Is there a free trial?
                        <span class="faq-icon text-2xl transition-transform">+</span>
                    </button>
                    <div class="faq-content hidden px-8 pb-6 text-gray-500 font-light">
                        Absolutely! Pro and Business plans come with a 14-day free trial. No credit card required to start.
                    </div>
                </div>
                <div class="faq-item bg-white rounded-[24px] overflow-hidden">
                    <button class="faq-toggle w-full flex items-center justify-between px-8 py-6 text-left font-tuio uppercase text-tuio-navy hover:text-tuio-pink transition-colors">
                        What payment methods do you accept?
                        <span class="faq-icon text-2xl transition-transform">+</span>
                    </button>
                    <div class="faq-content hidden px-8 pb-6 text-gray-500 font-light">
                        We accept all major credit cards (Visa, Mastercard, American Express), PayPal, and wire transfer for annual Enterprise plans.
                    </div>
                </div>
                <div class="faq-item bg-white rounded-[24px] overflow-hidden">
                    <button class="faq-toggle w-full flex items-center justify-between px-8 py-6 text-left font-tuio uppercase text-tuio-navy hover:text-tuio-pink transition-colors">
                        Do you offer discounts for dental schools?
                        <span class="faq-icon text-2xl transition-transform">+</span>
                    </button>
                    <div class="faq-content hidden px-8 pb-6 text-gray-500 font-light">
                        Yes! We offer special pricing for dental schools and educational institutions. Contact us at edu@dentalreach.today for details.
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-tuio-navy py-20">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-4xl md:text-5xl font-tuio uppercase text-white mb-6">Ready to Get Started?</h2>
            <p class="text-gray-400 mb-10 max-w-xl mx-auto text-lg font-light">
                Join thousands of dental professionals already on DentalReach.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/register" class="px-10 py-4 bg-tuio-pink text-white rounded-full font-bold uppercase tracking-wide hover:bg-white hover:text-tuio-navy transition-all shadow-lg">
                    Start Free Trial
                </a>
                <a href="/contact" class="px-10 py-4 border-2 border-white/30 text-white rounded-full font-bold uppercase tracking-wide hover:bg-white hover:text-tuio-navy transition-all">
                    Talk to Sales
                </a>
            </div>
        </div>
    </section>
</BaseLayout>

<script>
    // Billing toggle functionality
    const toggle = document.getElementById('billing-toggle');
    const ball = document.getElementById('toggle-ball');
    const monthlyLabel = document.getElementById('monthly-label');
    const annualLabel = document.getElementById('annual-label');
    const proPrice = document.getElementById('pro-price');
    const enterprisePrice = document.getElementById('enterprise-price');
    
    let isAnnual = true;
    
    toggle?.addEventListener('click', () => {
        isAnnual = !isAnnual;
        
        if (isAnnual) {
            ball?.classList.remove('translate-x-8');
            monthlyLabel?.classList.remove('text-white', 'font-bold');
            monthlyLabel?.classList.add('text-gray-400');
            annualLabel?.classList.add('text-white', 'font-bold');
            annualLabel?.classList.remove('text-gray-400');
            if (proPrice) proPrice.textContent = '$29';
            if (enterprisePrice) enterprisePrice.textContent = '$99';
        } else {
            ball?.classList.add('translate-x-8');
            monthlyLabel?.classList.add('text-white', 'font-bold');
            monthlyLabel?.classList.remove('text-gray-400');
            annualLabel?.classList.remove('text-white', 'font-bold');
            annualLabel?.classList.add('text-gray-400');
            if (proPrice) proPrice.textContent = '$39';
            if (enterprisePrice) enterprisePrice.textContent = '$129';
        }
    });
    
    // FAQ accordion
    document.querySelectorAll('.faq-toggle').forEach(btn => {
        btn.addEventListener('click', () => {
            const content = btn.nextElementSibling as HTMLElement;
            const icon = btn.querySelector('.faq-icon');
            
            // Close others
            document.querySelectorAll('.faq-content').forEach(c => {
                if (c !== content) {
                    c.classList.add('hidden');
                    (c.previousElementSibling?.querySelector('.faq-icon') as HTMLElement).textContent = '+';
                }
            });
            
            // Toggle current
            content?.classList.toggle('hidden');
            if (icon) {
                icon.textContent = content?.classList.contains('hidden') ? '+' : '−';
            }
        });
    });
</script>
