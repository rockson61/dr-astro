---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Create Account | DentalReach">
    <div class="min-h-screen bg-tuio-bg flex">
        <!-- Left: Branding Panel -->
        <div class="hidden lg:flex lg:w-1/2 bg-tuio-navy relative overflow-hidden flex-col justify-center items-center p-12">
            <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
            <div class="relative z-10 text-center max-w-lg">
                <div class="w-20 h-20 bg-tuio-pink rounded-2xl flex items-center justify-center text-white text-3xl font-tuio mx-auto mb-8">
                    D
                </div>
                <h1 class="font-tuio text-5xl uppercase text-white leading-tight mb-6">
                    Join the<br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-tuio-pink to-purple-500">Community</span>
                </h1>
                <p class="text-gray-400 text-lg font-light mb-12">
                    Connect with 50,000+ dental professionals worldwide. Access exclusive content, job opportunities, and more.
                </p>
                
                <!-- Features -->
                <div class="space-y-4 text-left">
                    <div class="flex items-center gap-4 text-white/80">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-tuio-pink">‚úì</div>
                        <span>Access exclusive articles and research</span>
                    </div>
                    <div class="flex items-center gap-4 text-white/80">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-tuio-pink">‚úì</div>
                        <span>Find jobs tailored to your specialty</span>
                    </div>
                    <div class="flex items-center gap-4 text-white/80">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-tuio-pink">‚úì</div>
                        <span>Network with peers globally</span>
                    </div>
                    <div class="flex items-center gap-4 text-white/80">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-tuio-pink">‚úì</div>
                        <span>List your practice or products</span>
                    </div>
                </div>
            </div>
            
            <!-- Decorative circles -->
            <div class="absolute -top-20 -right-20 w-64 h-64 bg-tuio-pink/10 rounded-full blur-3xl"></div>
            <div class="absolute -bottom-32 -left-32 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
        </div>
        
        <!-- Right: Registration Form -->
        <div class="flex-1 flex items-center justify-center p-8">
            <div class="w-full max-w-md">
                <!-- Mobile Logo -->
                <div class="lg:hidden text-center mb-8">
                    <div class="w-16 h-16 bg-tuio-pink rounded-2xl flex items-center justify-center text-white text-2xl font-tuio mx-auto mb-4">
                        D
                    </div>
                    <h1 class="font-tuio text-2xl uppercase text-tuio-navy">Create Account</h1>
                </div>
                
                <div class="bg-white rounded-[32px] p-8 shadow-sm">
                    <h2 class="font-tuio text-3xl uppercase text-tuio-navy mb-2 hidden lg:block">Get Started</h2>
                    <p class="text-gray-500 mb-8 hidden lg:block">Create your free account in seconds</p>
                    
                    <!-- Social Sign Up -->
                    <div class="space-y-3 mb-8">
                        <button class="w-full flex items-center justify-center gap-3 px-6 py-4 border border-gray-200 rounded-full hover:bg-gray-50 transition-all font-medium text-gray-700">
                            <svg class="w-5 h-5" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                            Continue with Google
                        </button>
                        <button class="w-full flex items-center justify-center gap-3 px-6 py-4 border border-gray-200 rounded-full hover:bg-gray-50 transition-all font-medium text-gray-700">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.166 6.839 9.489.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.161 22 16.416 22 12c0-5.523-4.477-10-10-10z"/></svg>
                            Continue with GitHub
                        </button>
                    </div>
                    
                    <div class="relative mb-8">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-200"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-4 bg-white text-gray-400 font-medium">or register with email</span>
                        </div>
                    </div>
                    
                    <form class="space-y-5" id="register-form">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-bold text-gray-600 mb-2 uppercase tracking-wide">First Name</label>
                                <input 
                                    type="text" 
                                    name="first_name"
                                    required
                                    class="w-full px-5 py-4 bg-tuio-bg rounded-2xl focus:ring-2 focus:ring-tuio-pink focus:outline-none text-tuio-navy font-medium"
                                    placeholder="John"
                                />
                            </div>
                            <div>
                                <label class="block text-sm font-bold text-gray-600 mb-2 uppercase tracking-wide">Last Name</label>
                                <input 
                                    type="text" 
                                    name="last_name"
                                    required
                                    class="w-full px-5 py-4 bg-tuio-bg rounded-2xl focus:ring-2 focus:ring-tuio-pink focus:outline-none text-tuio-navy font-medium"
                                    placeholder="Doe"
                                />
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-bold text-gray-600 mb-2 uppercase tracking-wide">Email Address</label>
                            <input 
                                type="email" 
                                name="email"
                                required
                                class="w-full px-5 py-4 bg-tuio-bg rounded-2xl focus:ring-2 focus:ring-tuio-pink focus:outline-none text-tuio-navy font-medium"
                                placeholder="you@example.com"
                            />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-bold text-gray-600 mb-2 uppercase tracking-wide">Password</label>
                            <div class="relative">
                                <input 
                                    type="password" 
                                    name="password"
                                    required
                                    minlength="8"
                                    id="password-input"
                                    class="w-full px-5 py-4 bg-tuio-bg rounded-2xl focus:ring-2 focus:ring-tuio-pink focus:outline-none text-tuio-navy font-medium pr-12"
                                    placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                                />
                                <button type="button" id="toggle-password" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-tuio-pink">
                                    üëÅÔ∏è
                                </button>
                            </div>
                            <p class="text-xs text-gray-400 mt-2">Minimum 8 characters</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-bold text-gray-600 mb-2 uppercase tracking-wide">I am a...</label>
                            <select name="role" class="w-full px-5 py-4 bg-tuio-bg rounded-2xl focus:ring-2 focus:ring-tuio-pink focus:outline-none text-tuio-navy font-medium appearance-none cursor-pointer">
                                <option value="dentist">Dentist</option>
                                <option value="hygienist">Dental Hygienist</option>
                                <option value="assistant">Dental Assistant</option>
                                <option value="lab_tech">Lab Technician</option>
                                <option value="student">Dental Student</option>
                                <option value="practice_owner">Practice Owner</option>
                                <option value="manufacturer">Manufacturer/Supplier</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        
                        <div class="flex items-start gap-3">
                            <input type="checkbox" id="terms" required class="mt-1 w-5 h-5 rounded border-gray-300 text-tuio-pink focus:ring-tuio-pink cursor-pointer"/>
                            <label for="terms" class="text-sm text-gray-500">
                                I agree to the <a href="/terms" class="text-tuio-pink hover:underline">Terms of Service</a> and <a href="/privacy" class="text-tuio-pink hover:underline">Privacy Policy</a>
                            </label>
                        </div>
                        
                        <button type="submit" class="w-full py-4 bg-tuio-pink text-white rounded-full font-bold uppercase tracking-wide hover:bg-tuio-navy transition-all shadow-lg text-lg">
                            Create Account
                        </button>
                    </form>
                    
                    <p class="text-center text-gray-500 mt-8">
                        Already have an account? 
                        <a href="/login" class="text-tuio-pink font-bold hover:underline">Sign in</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    // Password toggle
    const toggleBtn = document.getElementById('toggle-password');
    const passwordInput = document.getElementById('password-input') as HTMLInputElement;
    
    toggleBtn?.addEventListener('click', () => {
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleBtn.textContent = 'üôà';
        } else {
            passwordInput.type = 'password';
            toggleBtn.textContent = 'üëÅÔ∏è';
        }
    });
    
    // Form submission (demo)
    const form = document.getElementById('register-form');
    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(form as HTMLFormElement);
        console.log('Registration data:', Object.fromEntries(formData));
        
        // Show success toast
        if ((window as any).showToast) {
            (window as any).showToast('Account created! Redirecting...', 'success');
        }
        
        // Redirect after delay
        setTimeout(() => {
            window.location.href = '/login';
        }, 1500);
    });
</script>
